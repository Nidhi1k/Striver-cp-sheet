#include <iostream>
#include<string>
using namespace std;

int main() {
	// your code goes here
	int n;
    cin >> n;//input n times
 
    int x = 0;
    for(int i=0;i<n;i++){
        string s;
        cin >> s;
        if(s[0] == '+')
            x++;
        if(s[0] == '-')
            x--;
        if(s[2] == '+')
            x++;
        if(s[2] == '-')
            x--;
    }
    cout << x << endl;

	return 0;
}
